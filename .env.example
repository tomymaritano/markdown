# ====================================
# BUILD CONFIGURATION
# ====================================
# NOTE: For security, actual credentials should be stored in:
# - Local .env file (never commit)
# - CI/CD secret variables
# - OS keychain/credential manager

# Environment (development/production)
NODE_ENV=production

# Apple Developer Configuration (macOS builds)
# See docs/BUILDING.md for setup instructions
APPLE_ID=
APPLE_TEAM_ID=
CSC_NAME=
CSC_LINK=
# SECURITY: Never commit actual passwords or tokens
# Use environment-specific .env files instead

# GitHub Configuration (for auto-updates)
# Create token at: https://github.com/settings/tokens
# Required scopes: repo (for private repos)
# SECURITY: Store in CI/CD secrets, not in code
GH_TOKEN=

# Frontend Environment Variables (accessible in React)
# These MUST start with VITE_ to be available in the frontend

# App Configuration
VITE_APP_NAME=Viny
VITE_APP_VERSION=1.4.1
VITE_APP_DESCRIPTION=Professional markdown editor

# API Configuration
VITE_API_BASE_URL=https://api.example.com
VITE_API_TIMEOUT=5000

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_TELEMETRY=false
VITE_ENABLE_PLUGINS=true
VITE_ENABLE_SYNC=true

# Theme Configuration
VITE_DEFAULT_THEME=dark
VITE_AVAILABLE_THEMES=dark,light,solarized

# Editor Configuration
VITE_DEFAULT_EDITOR=markdown-it
VITE_ENABLE_VIM_MODE=true
VITE_ENABLE_LIVE_PREVIEW=true

# Storage Configuration
VITE_MAX_NOTES=1000
VITE_MAX_FILE_SIZE=10485760

# Debug Configuration
VITE_DEBUG_MODE=false
VITE_ENABLE_LOGGING=false